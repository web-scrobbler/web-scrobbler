{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "outDir": "build",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["tests/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*",
    "vite.configs.ts",
    "*.config.ts",
    "build.ts"
  ]
}
