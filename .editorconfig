root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{*.json,.stylelintrc}]
indent_size = 2
indent_style = space

[{*.yml,*.yaml}]
indent_size = 2
indent_style = space
